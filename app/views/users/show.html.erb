<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<h1>Books</h1>

<% @books.each do |book| %>
<div>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <span>Title<%= link_to book.title, book_path(book.id) %></span>
  <p>Opinion<%= book.body %></p>
</div>
<% end %>



