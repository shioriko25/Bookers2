
<!--homeボタンマイページ-->

 <div>
  <%= flash[:notice] %>
  </div>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', user: @user %>
        <%= render 'books/book', book: @book %><!--newbook/エラー文テンプレート-->
      </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th scope="col"></th>
                  <th scope="col">Title</th>
                  <th scope="col">Opinion</th>
                </tr>
            </thead>
            <% @books.each do |book| %>
              <tbody>
                <tr>
                  <td><p> <%= image_tag @user.get_profile_image(100,100) %></p></td>
                  <td><span><%= link_to book.title, book_path(book.id) %></span></td>
                   <td><p><%= book.body %></p></td>
                </tr>
              </tbody>
            <% end %>
            </table>
          </div>
    </div>
  </div>
</main>  
