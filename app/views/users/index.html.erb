<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
</div>

<!-- ユーザー一覧 -->

<h1>Users</h1>

<% @users.each do |user| %>
<div>
   <p>image<%= image_tag user.get_profile_image(100,100) %></p>
  <p></p>name<%= user.name %></p>
 <span><%= link_to " Show " , user_path(@user.id) %>  </span>
</div>
<% end %>
