
<!--Usersの一覧-->


<main>
<p><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', user: @user %><!-- ユーザーの詳細 -->
        <%= render 'books/book', book: @book %><!--newbook/エラー文テンプレート-->
      </div>
          <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">image</th>
                  <th scope="col">name</th>
                  <th scope="col"></th>
                </tr>
              </thead>
                <% @users.each do |user| %>
              <tbody>
                <tr>
                  <td><span><%= link_to user_path(user.id) do %><%= image_tag user.get_profile_image(100,100) %><% end %></span></td>
                  <td><p><%= user.name %></p></td>
                  <td>フォロー数: <%= user.followings.count %></td>
                  <td>フォロワー数: <%= user.followers.count %></td>
                  <td><%= render 'following', user: @user %></td>
                  <td><span><%= link_to " Show " , user_path(user.id) %>  </span></td>
                </tr>
              </tbody>
                <% end %>
            </table>
           </div>
    </div>
  </div>
  <%= render 'relationships/follow_list', users: @users %>
</main>


