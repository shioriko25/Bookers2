
                  <% book.book_comments.each do |book_comment| %>
                   <% book_comment_user = book_comment.user %>
                  <tr>
                    <td><p><%= image_tag book_comment.user.get_profile_image(50,50) %></p>
                    	<%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
                    		<%= book_comment_user.name %>
                  		<% end %>
                    </td>
                    <td><%= book_comment.comment %></td>
                    <td><% if book_comment.user == current_user %>
                      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment),class:"btn-sm btn-danger", method: :delete, remote: true,  "data-confirm" => "本当に消しますか？"  %>
                    </td>
                    <% end %>
                  <% end %>
                  
                  