
<h1>Book detail</h1>

<% @books.each do |book| %>
<div>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <span><%= link_to book.title, book_path(book.id) %></span>
  <p><%= book.body %></p>
  <span><%= link_to book.user.name, book_path(book.id) %></span>
</div>
<% end %>












<h1>New book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit ' Create Book ' %>
  <% end %>