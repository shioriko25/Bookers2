
<!--マイページのbookの編集ページ(homeボタン→title→edit)-->


<main>
<p><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>

        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="inputImage">Title</label>
              <%= f.text_field :title ,class:"form-control book_title"  %>
          </div>
          <div class="form-group">
            <label for="inputImage">Opinion</label>
              <%= f.text_area :body ,class:"form-control book_body" %>
          </div>
          <div class="form-group">
            <label for="inputImage"> <%= f.submit 'Update Book' ,class:"btn btn-success"  %></label>
          </div>
        <% end %>
            <span><%= link_to " Show " , book_path(@book.id) %>  </span>
            |
            <span><%= link_to " Back " , books_path %>  </span>
            
    </div>
  </div>
</div>
</main>

